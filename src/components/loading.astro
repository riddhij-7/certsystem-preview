---

import logo from '../assets/forengers-logo.png';
---

<div class="container">
  <div class="header">
    <div class="logo">
      <img src={logo.src} alt="Forengers Foundation Logo" width="80" height="80" />
    </div>
    <div class="title-section">
      <h1>Forengers Foundation</h1>
      <h2>Certificate Verification</h2>
    </div>
  </div>

  <div class="verification-card">
    <div class="verification-content">
      
      <h3>Verifying Your Certificate...</h3>
      <p>Please wait while we confirm the authenticity of your submission.</p>
      <div class="loading-bar">
        <div class="loading-progress"></div>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    min-height: 100vh;
    background: linear-gradient(135deg, #E8F5E8 0%, #D4F4D4 100%);
    padding: 40px 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 60px;
    gap: 20px;
  }

  .logo {
    flex-shrink: 0;
  }

  .title-section {
    text-align: left;
  }

  .title-section h1 {
    font-size: 2.5rem;
    color: #2F4F2F;
    margin: 0;
    font-weight: 600;
    letter-spacing: -0.5px;
  }

  .title-section h2 {
    font-size: 1.7rem;
    color: #2F4F2F;
    margin: 8px 0 0 0;
    font-weight: 400;
  }

  .verification-card {
    max-width: 500px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .verification-content {
    text-align: center;
  }

  .icon-container {
    margin-bottom: 20px;
  }

  .verification-icon {
    animation: pulse 2s infinite;
  }

  .verification-content h3 {
    font-size: 1.5rem;
    color: #2F4F2F;
    margin: 0 0 16px 0;
    font-weight: 600;
  }

  .verification-content p {
    color: #666;
    font-size: 1rem;
    margin: 0 0 30px 0;
    line-height: 1.5;
  }

  .loading-bar {
    width: 100%;
    height: 6px;
    background: #E5E5E5;
    border-radius: 3px;
    overflow: hidden;
    margin-top: 20px;
  }

  .loading-progress {
    height: 100%;
    background: linear-gradient(90deg, #4A5D23, #6B8E23);
    border-radius: 3px;
    animation: loading 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
  }

  @keyframes loading {
    0% {
      width: 0%;
      margin-left: 0%;
    }
    50% {
      width: 60%;
      margin-left: 0%;
    }
    100% {
      width: 0%;
      margin-left: 100%;
    }
  }

  @media (max-width: 768px) {
    .header {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .title-section h1 {
      font-size: 2rem;
    }

    .title-section h2 {
      font-size: 1.2rem;
    }

    .verification-card {
      padding: 30px 20px;
    }

    .verification-content h3 {
      font-size: 1.3rem;
    }

    .verification-content p {
      font-size: 0.9rem;
    }
  }
</style>